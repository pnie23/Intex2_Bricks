@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password?";
}

<div class="row">
    <div class="col">
        <section>
            <form id="account" method="post">
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-4 col-sm-8">
                            <div class="card mb-2" style="border-radius: 20px; box-shadow: 0px 5px 8px rgba(0, 0, 0, 0.5);">
                                <div class="d-flex justify-content-center align-items-center" style="padding-top: 5%">
                                    <h2 class="text-center">Forgot Your Password?</h2>
                                </div>
                                <div class="card-body">
                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #E74F65; color: white">Reset Password</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
