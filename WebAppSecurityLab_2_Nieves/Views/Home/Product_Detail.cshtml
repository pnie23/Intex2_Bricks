@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Path to your layout file
}

<!DOCTYPE html>
<html>
<head>
    <title>Product Details</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            padding-bottom: 20px;
        }

        .product-info {
            display: flex;
            margin-top: 20px;
        }

            .product-info img {
                width: 450px; /* Set a fixed width for the image */
                height: 450px; /* Maintain aspect ratio */
                margin-right: 20px;
                margin-bottom: 20px;
            }

        .back-to-home a {
            display: inline-block;
            padding: 5px 10px;
            margin-top: 20px;
            color: dimgray;
            text-decoration: none;
            border: 2px solid dimgray;
            border-radius: 5px;
        }

        .red-bar {
            background-color: #E74F65;
            height: 5px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-info">
            <img src="@ViewBag.Product.img_link" alt="Product Image" />
            <div class="product-details">
                <h2>@ViewBag.Product.name</h2>
                <br />
                <p>Price: $@ViewBag.Product.price</p>
                <p>Description: @ViewBag.Product.description</p>
                <p class="back-to-home"><a href="@Url.Action("Index", "Home")">Back to Home</a></p>
            </div>
        </div>
    </div>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <h3>Recommended Products</h3>
            <br />
            @if (@ViewBag.Product.product_Id ==1){
                <div class="card shadow">
                    <!-- Product image-->
                    <img class="card-img-top p-3" src="https://m.media-amazon.com/images/I/91Rk1i6hZrL._AC_SL1500_.jpg" alt="Product image" style="height: 200px; object-fit: contain;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">Ahsoka's Starfighter and Vulture Droid</h5>
                            <!-- Product price-->
                            <h6 class="text-muted">$150</h6>
                        </div>
                    </div>
                </div>
                <div class="card shadow">
                    <!-- Product image-->
                    <img class="card-img-top p-3" src="https://www.lego.com/cdn/cs/set/assets/blt3de19d1ec415c640/75361.png?format=webply&fit=bounds&quality=75&width=800&height=800&dpr=1" alt="Product image" style="height: 200px; object-fit: contain;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">Spider Tank</h5>
                            <!-- Product price-->
                            <h6 class="text-muted">$50</h6>
                        </div>
                    </div>
                </div>
                <div class="card shadow">
                    <!-- Product image-->
                    <img class="card-img-top p-3" src="https://m.media-amazon.com/images/I/71AUw95nXkL._AC_SL1500_.jpg" alt="Product image" style="height: 200px; object-fit: contain;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">LEGO DC Universe Super Heroes Superman Minifigure Clock</h5>
                            <!-- Product price-->
                            <h6 class="text-muted">$12</h6>
                        </div>
                    </div>
                </div>
                <div class="card shadow">
                    <!-- Product image-->
                    <img class="card-img-top p-3" src="https://images.brickset.com/sets/large/71017-7.jpg?201611220640" alt="Product image" style="height: 200px; object-fit: contain;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">King Tut</h5>
                            <!-- Product price-->
                            <h6 class="text-muted">$4</h6>
                        </div>
                    </div>
                </div>
            }
            @if (ViewBag.Recommendations != null)
            {
                <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-4 justify-content-center">
                    @foreach (var recommendation in ViewBag.Recommendations)
                    {
                        <div class="col mb-5">
                            <div class="card h-100 border-0">
                                <img src="@recommendation.img_link" class="card-img-top" alt="@recommendation.name">
                                <div class="card-body">
                                    <h5 class="card-title">@recommendation.name</h5>
                                    <p>Price: $@recommendation.price</p>
                                    <p>Description: @recommendation.description</p>
                                    <a asp-controller=“Home” asp-action=“Product_Detail” asp-route-id=“@recommendation.orignal_product_Id” asp-route-Name=“@recommendation.name” asp-route-ImgLink=“@recommendation.img_link” asp-route-Price=“@recommendation.price” asp-route-Description=“@recommendation.description” class=“card-link”>View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
</body>
</html>
