@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Path to your layout file
}

@model ProductsListViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Product Details</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            padding-bottom: 20px;
        }

        .product-info {
            display: flex;
            margin-top: 20px;
        }

            .product-info img {
                width: 450px; /* Set a fixed width for the image */
                height: 450px; /* Maintain aspect ratio */
                margin-right: 20px;
                margin-bottom: 20px;
            }


        .back-to-home a {
            display: inline-block;
            padding: 5px 10px;
            margin-top: 20px;
            color: dimgray;
            text-decoration: none;
            border: 2px solid dimgray;
            border-radius: 5px;
        }

        .red-bar {
            background-color: #E74F65;
            height: 5px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-info">
            <img src="@ViewBag.Product.img_link" alt="Product Image" />
            <div class="product-details">
                <h2>@ViewBag.Product.name</h2>
                <br />
                <p>Price: $@ViewBag.Product.price</p>
                <p>Description: @ViewBag.Product.description</p>
                <p class="back-to-home"><a href="@Url.Action("Index", "Home")">Back to Home</a></p>
            </div>
        </div>
    </div>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <h3>Recommended Products</h3>
            <p>@ViewBag.Recommendation2.Recommended_Product_1_Name</p>
            @if (ViewBag.Recommendation != null && ViewBag.Product.product_Id == ViewBag.Recommendation.product_Id)
            {
                <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <a href="@Url.Action("Product_Detail", "Home", new { id = ViewBag.Recommendation.product_Id, product_name = ViewBag.Recommendation.Recommended_Product_1_Name, image_link = ViewBag.Recommendation.Recommended_Product_1_Img_Link })" class="card-link">
                            <div class="card h-100 border-0">
                                <img src="@ViewBag.Recommendation.Recommended_Product_1_Img_Link" class="card-img-top" alt="@ViewBag.Recommendation.Recommended_Product_1_Name">
                                <div class="card-body">
                                    <h5 class="card-title">@ViewBag.Recommendation.Recommended_Product_1_Name</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    ...
                </div>
            }
        </div>
    </section>
</body>
</html>
