@model Product

@{
    ViewData["Title"] = "Submit to Film Collection";
}

<h1 style="text-align: center">Add to your products:</h1>

<div class="form-container form-group">
    <form method="post">
        @* Product Name *@
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" class="form-control" required>
        <br />

        @* Year *@
        <label for="year">Year:</label>
        <input type="text" id="year" name="year" class="form-control" required>
        <br />

        @* Number of Parts *@
        <label for="num_parts">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" class="form-control" required>
        <br />

        @* Price *@
        <label for="price">Price:</label>
        <input type="text" id="price" name="price" class="form-control" required>
        <br />

        @* Image Link *@
        <label for="img_link">Image Link:</label>
        <input type="text" id="img_link" name="img_link" class="form-control">
        <br />

        @* Primary Color *@
        <label for="primary_color">Primary Color:</label>
        <input type="text" id="primary_color" name="primary_color" class="form-control">
        <br />

        @* Secondary Color *@
        <label for="secondary_color">Secondary Color:</label>
        <input type="text" id="secondary_color" name="secondary_color" class="form-control">
        <br />

        @* Category *@
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" class="form-control">
        <br />

        @* Description *@
        <label for="description">Description:</label>
        <textarea id="description" name="description" class="form-control" required></textarea>
        <br />

        <div class="button_container">
            <!--JS onclick event to confirm user's submission to help avoid accidental submissions-->
            <button class="button_submit" type="submit" onclick="clicked(event)">Submit Changes</button>
        </div>
    </form>
</div>
