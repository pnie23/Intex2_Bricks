@model Product

@{
    ViewData["Title"] = "Edit Your Products";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Path to your layout file
}
<h1 style="text-align: center">Edit Your Products:</h1>

<div class="form-container form-group">
    <form method="post">
        <div asp-validation-summary="All"></div>
        @* Product Name *@
        <input type="hidden" asp-for="product_Id">

        <label asp-for="name">Product Name:</label>
        <input asp-for="name" />
        <br />
        <br />
        @* Year *@
        <label asp-for="year">Year:</label>
        <input asp-for="year" />
        <br />
        <br />
        @* Number of Parts *@
        <label asp-for="num_parts">Number of Parts:</label>
        <input asp-for="num_parts" />
        <br />
        <br />
        @* Price *@
        <label asp-for="price">Price:</label>
        <input asp-for="price" />
        <br />
        <br />
        @* Image Link *@
        <label asp-for="img_link">Image Link:</label>
        <input asp-for="img_link" />
        <br />
        <br />
        @* Primary Color *@
        <label asp-for="primary_color">Primary Color:</label>
        <input asp-for="primary_color">
        <br />
        <br />
        @* Secondary Color *@
        <label asp-for="secondary_color">Secondary Color:</label>
        <input asp-for="secondary_color">
        <br />
        <br />
        @* Category *@
        <label asp-for="category">Category:</label>
        <input asp-for="category">
        <br />
        <br />
        @* Description *@
        <label asp-for="description">Description:</label>
        <textarea asp-for="description"></textarea>
        <br />
        <br />
        <div class="button_container">
            <!--JS onclick event to confirm user's submission to help avoid accidental submissions-->
            <button class="button_submit" type="submit" onclick="clicked(event)">Submit Changes</button>
        </div>
    </form>
</div>
