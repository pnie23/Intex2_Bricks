@{
}

@model Product

<div class="card shadow">
    <!-- Product image-->
    <img class="card-img-top p-3" src="@Model.img_link" alt="Product image" style="height: 200px; object-fit: contain;" />
    <!-- Product details-->
    <div class="card-body p-4">
        <div class="text-center">
            <!-- Product name-->
            <h5 class="fw-bolder">@Model.name</h5>
            <!-- Product price-->
            <h6 class="text-muted">$@Model.price</h6>
        </div>
    </div>
    <!-- Add to cart form -->
    <form class="p-3" id="@Model.product_Id" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="product_Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-outline-dark btn-sm d-block mx-auto">Add to Cart</button>
    </form>
</div>